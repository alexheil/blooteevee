<%= provide(:title, "Create A Video") %>

<div class="wrapper">
  <div class="container">
    <div class="form-container padding-vertical">

      <div class="padding-bottom center mid-text border-bottom">
        Create a video
      </div>

      <div class="padding-top">
        <%= form_for(@video, url: user_videos_path) do |f| %>
          <span class="video_errors"><%= render 'partials/errors/video_errors' %></span>
          
          <div class="field">
            <%= f.label :title %>
            <%= f.text_field :title, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :category_id %>
            <%= f.hidden_field :category_id %>
            <%= f.collection_select(:category_id, Category.all, :id, :title) %>
          </div>

          <div class="padding-bottom border-bottom">
            <label class="image-button" for="course-image">Upload a video thumbnail</label>
            <%= f.hidden_field :image, value: @video.cached_image_data %>
            <span class="hidden"><%= f.file_field :image, id: "course-image" %></span>
            <div class="file-name"></div>
          </div>
          
          <div class="field">
            <label class="image-button" for="video-image">Upload a video</label>
            <%= f.hidden_field :video, value: @video.cached_video_data %>
            <span class="hidden"><%= f.file_field :video, id: "video-image" %></span>
            <div class="file-name"></div>
          </div>

          <div class="field">
            <%= f.label :description %>
            <%= f.text_area :description, class: "text-area" %>
          </div>

          <%= f.submit "Create video", data: { disable_with: 'Creating...' }, class: "submit-button" %>
        <% end %>
      </div>

    </div>
  </div>
</div>