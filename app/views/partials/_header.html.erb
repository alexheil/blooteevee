<div class="header-container">
  <div class="container">
    <nav class="nav padding-vertical">
      <div class="site-title">
        <%= link_to 'Bloo Tee Vee', root_url %>
      </div>
      <ul class="center">
        <li><%= link_to 'UPLOAD', become_member_path, class: "nav-links" %></li>
           | 
        <% unless user_signed_in? %>
          <li><%= link_to 'SIGN IN', sign_in_path, class: "nav-links" %></li>
           | <li><%= link_to 'REGISTER', register_path, class: "nav-links" %></li>
        <% end %>
        <li><%= link_to 'MENU', become_member_path, class: "nav-links" %></li>
      </ul>
    </nav>
  </div>

  <div class="container border-bottom">
    <%= form_tag(search_path, :method => "get") do %>
      <div class="search-container padding-bottom">
        <div class="wrapper flex">
          <%= text_field_tag :search, params[:search], class: "search-field" %>
          <%= submit_tag "search", class: "search-button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>