<div class="wrapper header-container">
  <div class="container">
    <nav class="nav padding-vertical">
      <div class="site-title">
        <%= link_to 'Bloo Tee Vee', root_url %>
      </div>
      <ul class="center">
        <li><%= link_to 'UPLOAD', become_member_path, class: "nav-links" %></li>
           | 
        <% unless user_signed_in? %>
          <li><%= link_to 'SIGN IN', sign_in_path, class: "nav-links" %></li>
           | <li><%= link_to 'REGISTER', register_path, class: "nav-links" %></li>
        <% end %>
        <li><span id="menu-click">MENU</span></li>
      </ul>
    </nav>
  </div>

  <div class="container border-bottom">
    <%= form_tag(search_path, :method => "get") do %>
      <div class="search-container padding-bottom">
        <div class="wrapper flex">
          <%= text_field_tag :search, params[:search], class: "search-field" %>
          <%= submit_tag "search", class: "search-button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="menu-container" class="side-menu">
  <nav class="padding-horizontal padding-vertical">
    <ul class="right">
      <li><%= link_to 'UPLOAD', become_member_path, class: "nav-links" %></li>
      <li><%= link_to 'SUBSCRIPTIONS', become_member_path, class: "nav-links" %></li>
      <li><%= link_to 'DISCOVER', become_member_path, class: "nav-links" %></li>
      <% unless user_signed_in? %>
        <li><%= link_to 'SIGN IN', sign_in_path, class: "nav-links" %></li>
         <li><%= link_to 'REGISTER', register_path, class: "nav-links" %></li>
      <% else %>
      <li><%= link_to 'PROFILE', edit_user_profile_path(current_user), class: "nav-links" %></li>
      <li><%= link_to 'SETTINGS', edit_user_registration_path(current_user), class: "nav-links" %></li>
        <li><%= link_to 'SIGN OUT', sign_out_path, class: "nav-links" %></li>
      <% end %>
      
    </ul>
  </nav>
</div>